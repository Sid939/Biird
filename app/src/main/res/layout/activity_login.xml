<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_176sdp"
        android:layout_height="@dimen/_162sdp"
        android:layout_marginStart="@dimen/_45sdp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/_45sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/ltEmail"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#353232"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/ltPass"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter password"
        android:inputType="textVisiblePassword"
        android:textColor="#000000"
        android:textColorHint="#353232"
        app:layout_constraintEnd_toEndOf="@+id/ltEmail"
        app:layout_constraintStart_toStartOf="@+id/ltEmail"
        app:layout_constraintTop_toBottomOf="@+id/ltEmail" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:text="LogIn"
        android:textColor="#FDFDFD"
        android:textSize="@dimen/_16sdp"
        app:cornerRadius="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/ltPass"
        app:layout_constraintStart_toStartOf="@+id/ltPass"
        app:layout_constraintTop_toBottomOf="@+id/ltPass" />

    <TextView
        android:id="@+id/etsignup"
        android:layout_width="340dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="don't have an account Create account"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnlogin"
        app:layout_constraintStart_toStartOf="@+id/btnlogin"
        app:layout_constraintTop_toBottomOf="@+id/btnlogin" />
</androidx.constraintlayout.widget.ConstraintLayout>